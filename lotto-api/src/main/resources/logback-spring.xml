<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">
    <!-- Logback 상태 로그 완전 차단 (초기화 과정 로그 제거) -->
    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />
    
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    
    <!-- 스택 트레이스 출력 최소화 (메시지만 출력) -->
    <property name="CONSOLE_LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n"/>
    
    <!-- Logback 내부 로그 억제 (초기화 과정 로그 제거) -->
    <logger name="ch.qos.logback" level="WARN"/>
    
    <!-- DB 관련 로그 간결화 -->
    <logger name="org.postgresql" level="WARN"/>
    <logger name="org.flywaydb" level="WARN"/>
    <logger name="com.zaxxer.hikari" level="WARN"/>
    
    <!-- SSL 디버그 로그 완전 차단 (민감한 데이터 보호) -->
    <logger name="javax.net.ssl" level="OFF"/>
    <logger name="sun.security.ssl" level="OFF"/>
    
    <!-- 콘솔 출력 (스택 트레이스 제외) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!-- 예외 발생 시 첫 줄만 출력 -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <immediateFlush>true</immediateFlush>
        </encoder>
    </appender>
    
    <!-- 루트 로거 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
    
    <!-- 애플리케이션 로거 -->
    <logger name="io.appback.lottoguide" level="DEBUG"/>
</configuration>
